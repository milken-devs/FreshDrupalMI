{{ attach_library('milken_base/media_image') }}

{% set media_image_value =  media.toArray
  | merge({ 'entityTypeId': media.getEntityTypeId })
  | merge({ 'id': media.uuid.value })
  | merge({ 'drupal_internal__id': media.id })
  | merge({ 'includes': "field_media_image" })

%}


<media-image
  {{ attributes }}
  {{ content_attributes }}
  data-view-mode="card"
  data-entity="{{ media_image_value | jsonapi }}"
>

</media-image>
