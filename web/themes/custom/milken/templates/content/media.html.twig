{{ attach_library('milken/#{media.bundle.value}_display') }}

{% set edit_permission = 'edit-any-#{media.bundle.value}-content' %}
{% set bundle_name = media.bundle.value %}


<{{ bundle_name }}-display
  {{ attributes }}
  id="{{ media.uuid.value }}"
  type="{{ media.getEntityTypeId() }}--{{ media.bundle.value }}"
  entity-type-id="{{ media.getEntityTypeId() }}"
  drupal-internal-mid="{{ media.id.value }}"
  bundle="{{ media.bundle.value }}"
  view-mode="{{ view_mode }}"
  can-edit="{{ user.hasPermission( edit_permission ) }}"
>
  {{ content }}
</{{ bundle_name }}-display>
