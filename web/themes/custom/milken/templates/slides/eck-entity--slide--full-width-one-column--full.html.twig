{% if eck_entity %}
  {% set text_color = eck_entity.get('field_text_color').value.color | default("#ffffff") %}
  <div class="row align-items-center"
       style="
    {% if eck_entity.get('field_background_color').value.color != 'transparent' %}
      background-color: {{ eck_entity.get('field_background_color').value.color }}
    {% endif %}
       ">
    <div class="jumbotron d-block align-items-center"
         style="min-height: 650px; width: 100%;
         {% if eck_entity.get('field_background_image').entity %}
           background-image: url({{ file_url(eck_entity.get('field_background_image').entity.uri.value) }});
           background-position: center;
           background-clip: content-box;
           background-repeat: no-repeat;
           background-size: cover;
         {% endif %}
        ">
      <div class="container">
        <h1 class="display-3"
          style="color: {{ text_color }}"
        >{{ eck_entity.get('title').value }}</h1>
        <p class="lead" style="color: {{ text_color }}">{{ eck_entity.get('field_subtitle').value }}</p>
        <hr class="my-4">
        <p><a href="{{ eck_entity.get('field_link').value.uri }}" class="btn btn-primary btn-lg" style="color: {{ text_color }}">{{ eck_entity.get('field_link').value.title }}</a></p>
      </div>
    </div>
  </div>
{% endif %}
