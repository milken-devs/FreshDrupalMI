{% set node = content['#node'] %}
<div class="container d-block">
  <div class="row">
    <div class="col col-lg-6"
         style="background-image: url({{ file_url(node.get('field_background_image').entity.uri.value) }});
                background-position: center;
                background-clip: content-box;
                background-repeat: no-repeat;
                background-size: cover;
                min-height: 650px;">
    </div>
    <div class="col col-lg-6">
      <h1 class="display-3 text-white">{{ node.get('title').value }}</h1>
      <p class="lead text-white">{{ node.get('field_subtitle').value }}</p>
      <hr class="my-4">
      <p><a href="{{ node.get('field_link').uri }}" class="btn btn-primary btn-lg">{{ node.get('field_link').title }}</a></p>
    </div>
  </div>
</div>
