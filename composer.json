{
    "name": "milken-institute/freshdrupalmi",
    "description": "Main site development repo",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=7.2.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "composer/installers": "^1.6",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.0.1",
        "drupal/admin_toolbar": "^2.0",
        "drupal/adminimal_theme": "^1.5",
        "drupal/authorization": "^1.0",
        "drupal/better_normalizers": "^1.0",
        "drupal/bootstrap": "^3.21",
        "drupal/bootstrap_barrio": "^4.0@dev",
        "drupal/bootstrap_library": "^1.11",
        "drupal/cdn": "^3.2",
        "drupal/coder": "^8.3",
        "drupal/config_direct_save": "^1.0",
        "drupal/config_installer": "^1.0",
        "drupal/config_split": "^1.4",
        "drupal/config_update": "^1.6",
        "drupal/console": "~1.0",
        "drupal/console-en": "^1.9",
        "drupal/content_sync": "^2.1",
        "drupal/core": "^8.8",
        "drupal/cors": "^1.0",
        "drupal/crop": "^1.5",
        "drupal/ctools": "3.x-dev",
        "drupal/default_content": "1.x-dev",
        "drupal/default_content_extra": "1.x-dev",
        "drupal/delete_all": "^1.2",
        "drupal/devel": "^2.0",
        "drupal/devel_entity_updates": "^1.0",
        "drupal/diff": "^1.0@RC",
        "drupal/dropzonejs": "^2.0@alpha",
        "drupal/drupal-extension": "~3",
        "drupal/ds": "^3.5",
        "drupal/easy_install": "^10.1",
        "drupal/eck": "^1.0@alpha",
        "drupal/embed": "^1.0",
        "drupal/entity_block": "^1.0@beta",
        "drupal/entity_browser": "^2.2",
        "drupal/entity_embed": "^1.0",
        "drupal/entity_reference_revisions": "^1.7",
        "drupal/entityqueue": "^1.0@alpha",
        "drupal/facets": "^1.3",
        "drupal/features": "^3.8",
        "drupal/field_group": "^1.0",
        "drupal/file_entity": "^2.0@beta",
        "drupal/fontawesome": "^2.14",
        "drupal/image_style_warmer": "^1.0@beta",
        "drupal/imagick": "^1.2",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/kint": "^2.1",
        "drupal/markdown": "^1.2",
        "drupal/masquerade": "^2.0@beta",
        "drupal/media_entity_browser": "^2.0@alpha",
        "drupal/media_migration": "^1.0@alpha",
        "drupal/media_parent_entity_link": "^1.0@beta",
        "drupal/metatag": "^1.11",
        "drupal/migrate_d2d": "3.x-dev",
        "drupal/migrate_file": "^1.1",
        "drupal/migrate_manifest": "^1.9",
        "drupal/migrate_media_handler": "^1.0@RC",
        "drupal/migrate_plus": "^4.1",
        "drupal/migrate_source_csv": "^2.2",
        "drupal/migrate_tools": "^4.1",
        "drupal/module_missing_message_fixer": "^1.1",
        "drupal/npm": "^1.0@alpha",
        "drupal/openid_connect": "^1.0@beta",
        "drupal/paragraphs": "^1.10",
        "drupal/pathauto": "^1.6",
        "drupal/purge": "^3.0@beta",
        "drupal/redis": "^1.1",
        "drupal/restui": "1.x-dev",
        "drupal/s3fs": "3.x-dev",
        "drupal/s3fs_cors": "^1.0@beta",
        "drupal/search_api": "^1.11",
        "drupal/search_api_solr": "3.x-dev",
        "drupal/select2": "^1.4",
        "drupal/shield": "^1.2",
        "drupal/sophron": "^1.0@beta",
        "drupal/svg_image_field": "^1.2",
        "drupal/taxonomy_machine_name": "^1.0@alpha",
        "drupal/term_reference_tree": "1.x-dev",
        "drupal/toolbar_visibility": "^1.2",
        "drupal/twig_tweak": "^2.3",
        "drupal/vbo_export": "^3.0",
        "drupal/video_embed_field": "^2.2",
        "drupal/views_infinite_scroll": "^1.5",
        "drupal/webpack": "@dev",
        "drupal/workflow": "^1.1",
        "drush-ops/behat-drush-endpoint": "^9",
        "drush/drush": "^9.7",
        "leafo/scssphp": "^0.8.4",
        "oyejorge/less.php": "v1.7.0.14",
        "pantheon-systems/quicksilver-pushback": "^2",
        "rvtraveller/qs-composer-installer": "^1.1",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "behat/behat": "3.*",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "dmore/behat-chrome-extension": "^1.3",
        "drupal/coder": "^8.3.1",
        "genesis/behat-fail-aid": "^2.1",
        "jcalderonzumba/gastonjs": "^1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "mikey179/vfsstream": "^1.2",
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.4.0"
    },
    "conflict": {
            "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php",
            "tests/behat/features/bootstrap/FeatureContext.php"
        ]
    },
    "scripts": {
        "build-assets": [
            "@prepare-for-pantheon",
            "composer install --optimize-autoloader --no-dev",
            "gulp"
        ],
        "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
        "code-sniff": [
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor ./web/modules/custom",
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor ./web/themes/custom",
            "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor ./web/modules/custom",
            "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor ./web/themes/custom"
        ],
        "code-fix": [
            "./vendor/bin/phpcbf -vp --standard=Drupal,DrupalPractice web/modules/custom"
        ],
        "unit-test": "echo 'No unit test step defined.'",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "post-install-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "yarn install"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "yarn install"
        ],
        "post-create-project-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
        },
        "build-env": {
            "install-cms": [
                "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes"
            ],
            "export-configuration": "drush config-export --yes"
        },
        "drupal-scaffold": {
            "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
            "includes": [
                "sites/default/default.services.pantheon.preproduction.yml",
                "sites/default/settings.pantheon.php"
            ],
            "excludes": [
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                ".htaccess",
                "web.config"
            ]
        },
        "patches-file": "composer.patches.json",
        "enable-patching": true
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "config": {
            "bin-dir": "bin/"
        }
    }
}
